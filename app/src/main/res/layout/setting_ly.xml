<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <Switch
        android:id="@+id/blue"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:checked="false"
        android:text="Bluetooth"
        android:textOff="Bluetooth dimatikan"
        android:textOn="Bluetooth dinyalakan" />

    <Switch
        android:id="@+id/waifi"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:text="WiFi"
        android:checked="false"
        android:textOff="Wifi dimatikan"
        android:textOn="Wifi dinyalakan"
        android:layout_gravity="center"/>

    <Switch
        android:id="@+id/jipies"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:text="GPS"
        android:checked="false"
        android:textOff="GPS dimatikan"
        android:textOn="GPS dinyalakan"
        android:layout_gravity="center"/>

    <Switch
        android:id="@+id/kamemera"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:text="Kamera"
        android:checked="false"
        android:textOff="Kamera dimatikan"
        android:textOn="Kamera dinyalakan"
        android:layout_gravity="center"/>

    <Switch
        android:id="@+id/buku_kontak"
        android:layout_width="294dp"
        android:layout_height="56dp"
        android:text="Kontak"
        android:checked="false"
        android:textOff="Kontak dimatikan"
        android:textOn="Kontak dinyalakan"
        android:layout_gravity="center"/>

</LinearLayout>